<div class="sgek-header"><h1>Eventos</h1></div>

<div class="sgek-conteudo">
  <ul class="nav nav-tabs sgek-nav">
    <li role="presentation"><a href="#/eventos/novo"><span class="glyphicon glyphicon-plus"></span> Novo evento</a></li>
  </ul>

  <table class="table table-striped sgek-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Título</th>
        <th>Status</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody
      {{#if eventos}}
        {{#each eventos}}
        <tr>
          <td>{{id}}</td>
          <td>{{titulo}}</td>
          <td>{{{helper-status status}}}</td>
          <td>
            <div class="btn-group" role="group" aria-label="...">
              <a class="btn btn-default" href="#/apresentacao" role="button" {{{helper-disable-button status}}}><span class="glyphicon glyphicon-hand-right"></span><span class="visible-lg-inline"> Selecionar</span></a>
              <a class="btn btn-default" href="#/eventos/editar/{{id}}" role="button"><span class="glyphicon glyphicon-pencil"></span><span class="visible-lg-inline"> Editar</span></a>
              <a class="btn btn-default" href="javascript: void(0);" data-id="{{id}}" role="button"><span class="glyphicon glyphicon-trash"></span><span class="visible-lg-inline"> Excluir</span></a>
            </div>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="4">Nenhum evento cadastrado.</td>
        </tr>
      {{/if}}
