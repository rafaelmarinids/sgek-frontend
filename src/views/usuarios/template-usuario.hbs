<div class="sgek-header"><h1>Usuários</h1></div>

<div class="sgek-conteudo">
  <ul class="nav nav-tabs sgek-nav">
    <li role="presentation"><a href="#/usuarios"><span class="glyphicon glyphicon-th-large"></span> Lista de usuarios</a></li>
    <li role="presentation" class="active"><a href="javascript: void(0);"><span class="glyphicon glyphicon-{{icon}}"></span> {{acao}} usuário</a></li>
  </ul>

  <form class="form-horizontal sgek-form">
    <div class="form-group">
      <label class="col-sm-2 control-label">Tipo</label>
      <div class="col-sm-5">
        <div id="tipoRadio" class="btn-group" data-toggle="buttons">
          {{{helper-tipo-input usuario.tipo}}}
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <label for="nomeInput" class="col-sm-2 control-label">Nome</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="nomeInput" name="nome" placeholder="Nome do usuário" max="45" value="{{usuario.nome}}">
        <span class="help-block"></span>
      </div>
    </div>

    <div class="form-group">
      <label for="emailInput" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="emailInput" name="email" placeholder="Email do usuário" max="45" value="{{usuario.email}}">
        <span class="help-block"></span>
      </div>
    </div>

    <div class="form-group">
      <label for="senhaInput" class="col-sm-2 control-label">Senha</label>
      <div class="col-sm-4">
        <input type="password" class="form-control" id="senhaInput" name="senha" placeholder="Senha do usuário" max="45" value="">
        <span class="help-block"></span>
      </div>
    </div>

    <div class="form-group">
      <span class="col-sm-2 control-label"><strong>Eventos</strong></span>
      <div class="col-sm-4">
        {{{helper-eventos-checkbox-group opcoesEventos}}}
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body sgek-botao-base">
        <button id="salvarBtn" type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Cadastrar</button>
        <a class="btn btn-default" href="#/usuarios" role="button"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>
      </div>
    </div>

  </form>
</div>
